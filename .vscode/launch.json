{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest backend/functions",
            "program": "${workspaceRoot}/backend/functions/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--testMatch",
                "**/backend/functions/**/*.test.ts"
            ],
            "cwd": "${workspaceRoot}/backend/functions",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}